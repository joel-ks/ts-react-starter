{
  "name": "package-name",
  "version": "1.0.0",
  "author": "author",
  "license": "BSD-2-Clause",
  "engines": {
    "node": "^14.16.1",
    "npm": "^6.14.12"
  },
  "scripts": {
    "clean": "rimraf dist",
    "purge": "npm run clean && rimraf node_modules",
    "build": "npm run build:dev",
    "build:dev": "webpack --config webpack/webpack.dev.js && npm run copyStatic",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js && npm run copyStatic",
    "copyStatic": "copyfiles -u 2 src/static/**/* dist",
    "start": "webpack serve --config webpack/webpack.dev.js --open",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@babel/core": "~7.13.15",
    "@babel/preset-env": "~7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "~4.21.0",
    "@typescript-eslint/parser": "~4.21.0",
    "babel-loader": "~8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "~7.23.0",
    "eslint-plugin-jest": "~24.3.4",
    "fork-ts-checker-webpack-plugin": "^6.2.0",
    "jest": "~26.6.3",
    "react-hot-loader": "^4.13.0",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "~5.1.1",
    "ts-jest": "~26.5.4",
    "typescript": "4.2.4",
    "webpack": "~5.31.0",
    "webpack-cli": "~4.6.0",
    "webpack-dev-server": "~3.11.2",
    "webpack-merge": "~5.7.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
