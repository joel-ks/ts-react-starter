{
  "name": "package-name",
  "version": "1.0.0",
  "description": "description",
  "engines": {
    "node": "^12.17.0",
    "npm": "^6.14.4"
  },
  "scripts": {
    "clean": "rimraf dist",
    "purge": "npm run clean && rimraf node_modules",
    "build": "npm run build:dev",
    "build:dev": "webpack --config webpack/webpack.dev.js && npm run copyStatic",
    "build:prod": "webpack --config webpack/webpack.prod.js && npm run copyStatic",
    "copyStatic": "copyfiles -u 2 src/static/**/* dist",
    "start": "webpack-dev-server --config webpack/webpack.dev.js --open",
    "test": "jest",
    "lint": "eslint --ext .js .",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "author",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^3.0.8",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  }
}
